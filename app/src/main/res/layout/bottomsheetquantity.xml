<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <!-- LinearLayout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottomSheetQuantity"
        android:orientation="vertical"
        android:paddingStart="@dimen/_5sdp"
        android:paddingEnd="@dimen/_5sdp"
        android:paddingBottom="@dimen/_20sdp">
        <!-- ImageView -->
        <ImageView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_rectangle_1563"
            android:paddingTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_gravity="center" />


        <!-- RelativeLayout -->
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_margin="@dimen/_5sdp"
               >
               <!-- TextView -->
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/_12ssp"
                   android:textColor="@color/black"
                   android:fontFamily="@font/poppins_semibold"
                   android:layout_alignParentStart="true"
                   android:layout_centerInParent="true"
                   android:text="@string/quantity" />

               <!-- ImageView Appears Close Icon -->
               <ImageView
                   android:id="@+id/close_bottomSheetQuantity"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   app:srcCompat = "@drawable/ic_close"
                   android:layout_alignParentEnd="true"
                   android:layout_centerInParent="true"
                   android:contentDescription="@string/close_icon"
                   />
           </RelativeLayout>

        <!-- LinearLayout -->
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_margin="@dimen/_5sdp"
               android:orientation="horizontal"
               android:gravity="center"
               >
               <!-- TextView Appears Number 1 -->
               <TextView
                   android:id="@+id/one_bottomSheetQuantity"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/_10ssp"
                   android:fontFamily="@font/poppins_bold"
                   android:textColor="@color/white"
                   android:text="1"
                   android:background="@drawable/shape2"
                   android:paddingStart="@dimen/_15sdp"
                   android:paddingEnd="@dimen/_15sdp"
                   android:paddingTop="@dimen/_10sdp"
                   android:paddingBottom="@dimen/_10sdp"
                   android:layout_marginEnd="@dimen/_10sdp"
                   />

               <!-- TextView Appears Number 2 -->
               <TextView
                   android:id="@+id/two_bottomSheetQuantity"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/_10ssp"
                   android:fontFamily="@font/poppins_bold"
                   android:textColor="@color/black"
                   android:text="2"
                   android:background="@drawable/shape1"
                   android:paddingStart="@dimen/_15sdp"
                   android:paddingEnd="@dimen/_15sdp"
                   android:paddingTop="@dimen/_10sdp"
                   android:paddingBottom="@dimen/_10sdp"
                   android:layout_marginEnd="@dimen/_10sdp"
                   />

               <!-- TextView Appears Number 3 -->
               <TextView
                   android:id="@+id/three_bottomSheetQuantity"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/_10ssp"
                   android:fontFamily="@font/poppins_bold"
                   android:textColor="@color/black"
                   android:text="3"
                   android:background="@drawable/shape1"
                   android:paddingStart="@dimen/_15sdp"
                   android:paddingEnd="@dimen/_15sdp"
                   android:paddingTop="@dimen/_10sdp"
                   android:paddingBottom="@dimen/_10sdp"
                   android:layout_marginEnd="@dimen/_10sdp"
                   />

               <!-- TextView Appears Number 4 -->
               <TextView
                   android:id="@+id/four_bottomSheetQuantity"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/_10ssp"
                   android:fontFamily="@font/poppins_bold"
                   android:textColor="@color/black"
                   android:text="4"
                   android:background="@drawable/shape1"
                   android:paddingStart="@dimen/_15sdp"
                   android:paddingEnd="@dimen/_15sdp"
                   android:paddingTop="@dimen/_10sdp"
                   android:paddingBottom="@dimen/_10sdp"
                   android:layout_marginEnd="@dimen/_10sdp"
                   />

               <!-- TextView Appears Number 5 -->
               <TextView
                   android:id="@+id/five_bottomSheetQuantity"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/_10ssp"
                   android:fontFamily="@font/poppins_bold"
                   android:textColor="@color/black"
                   android:text="5"
                   android:background="@drawable/shape1"
                   android:paddingStart="@dimen/_15sdp"
                   android:paddingEnd="@dimen/_15sdp"
                   android:paddingTop="@dimen/_10sdp"
                   android:paddingBottom="@dimen/_10sdp"
                   />

           </LinearLayout>

    </LinearLayout>
</layout>