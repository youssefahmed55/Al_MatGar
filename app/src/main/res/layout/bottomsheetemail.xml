<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
   >

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottomSheetEmail"
        android:orientation="vertical"
        android:paddingStart="@dimen/_5sdp"
        android:paddingEnd="@dimen/_5sdp"
        android:paddingBottom="@dimen/_20sdp">

        <ImageView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_rectangle_1563"
            android:paddingTop="@dimen/_5sdp"
            android:layout_gravity="center" />



           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_margin="@dimen/_20sdp"
               android:orientation="horizontal"
               >

               <TextView
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="wrap_content"
                   android:text="@string/put_your_new_email"
                   android:textSize="@dimen/_10ssp"
                   android:textColor="@color/black"
                   android:fontFamily="@font/poppins_regular"
                   />

               <EditText
                   android:id="@+id/email_bottomSheetEmail"
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="wrap_content"
                   android:padding="@dimen/_8sdp"
                   android:textSize="@dimen/_10ssp"
                   android:textColor="@color/black"
                   android:background="@drawable/shape3"
                   android:maxLines="1"
                   android:maxLength="35"
                   android:inputType="textEmailAddress"
                   android:layout_marginStart="@dimen/_5sdp"
                   android:fontFamily="@font/poppins_regular"
                   />


           </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/put_your_password"
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"
                />

            <EditText
                android:id="@+id/password_bottomSheetEmail"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="@dimen/_8sdp"
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/black"
                android:background="@drawable/shape3"
                android:maxLines="1"
                android:inputType="textPassword"
                android:layout_marginStart="@dimen/_5sdp"
                android:fontFamily="@font/poppins_regular"
                />


        </LinearLayout>



    </LinearLayout>
</layout>